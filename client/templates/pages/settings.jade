template(name='settings')
  if currentUser
    h1 Settings
    hr
    .user-info
      .panel.panel-default
        .panel-heading
          h3.panel-title Radius Settings
        .panel-body
          .row
            .col-xs-12
              .pull-left 100m
              .pull-right 2km
              input#radius(type='range', min='100', max='2000', step='100')
          button#ok-button.btn.btn-default.pull-right(type='button') Save
